{
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2020",
    "module": "commonjs",
    "outDir": "../dist/",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true
  },
  "references": [
    { "path": "../" }
  ]
}
